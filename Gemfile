source "https://rubygems.org"

# the bundler gem bundles all the gems in this file for your application to use
gem "bundler"
# the sinatra gem connects our application to the internet to create our application and allows us to use specific Sinatra syntax 
gem "sinatra"
# the shotgun gem starts the Rack server and connects our application to the internet!
gem "shotgun"
gem "sinatra-logentries"

gem 'twilio-ruby'

